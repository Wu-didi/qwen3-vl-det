# Model Configuration
# 选择预定义模型类型 (推荐方式)
# 可选值: QWEN3_VL_2B, QWEN3_VL_4B, QWEN3_VL_8B, QWEN3_VL_32B
#         QWEN2_5_VL_3B, QWEN2_5_VL_7B, QWEN2_5_VL_32B, QWEN2_5_VL_72B
MODEL_TYPE=QWEN3_VL_8B

# 自定义模型路径 (可选，设置后会覆盖 MODEL_TYPE)
# MODEL_NAME=/path/to/local/model

MODEL_CACHE_DIR=./model_cache
DEVICE=cuda
TORCH_DTYPE=bfloat16
MAX_NEW_TOKENS=2048

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=false

# Detection Configuration
CONFIDENCE_THRESHOLD=0.5
MAX_IMAGE_SIZE=1280
ENABLE_BBOX=true

# Logging
LOG_LEVEL=INFO
